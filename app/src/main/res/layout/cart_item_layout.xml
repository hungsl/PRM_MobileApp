<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:layout_marginBottom="8dp"
    android:background="?android:attr/selectableItemBackground">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/cartImageView"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/placeholderimgproductdetail" />

    <!-- Product Info (Name, Price, and Total) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="8dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/cartProductName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:layout_gravity="center_vertical" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/cartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textSize="14sp"
            android:textColor="#FF0000"
            android:layout_gravity="center_vertical" />

        <!-- Total Price for this Item (Price x Quantity) -->
        <TextView
            android:id="@+id/cartItemTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total: $0.00"
            android:textSize="12sp"
            android:textColor="#000000"
            android:layout_gravity="center_vertical" />
    </LinearLayout>

    <!-- Quantity Control (Decrease, Display, Increase) -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@android:drawable/edit_text"
        android:padding="4dp">

        <!-- Decrease Button -->
        <ImageButton
            android:id="@+id/decreaseQuantityButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@android:drawable/ic_media_rew"
            android:contentDescription="Decrease quantity"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="6dp" />

        <!-- Quantity Display -->
        <EditText
            android:id="@+id/cartQuantity"
            android:layout_width="40dp"
            android:layout_height="36dp"
            android:background="@null"
            android:contentDescription="Quantity of item in cart"
            android:gravity="center"
            android:hint="0"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="14sp" />

        <!-- Increase Button -->
        <ImageButton
            android:id="@+id/increaseQuantityButton"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:src="@android:drawable/ic_media_ff"
            android:contentDescription="Increase quantity"
            android:background="?android:attr/selectableItemBackground"
            android:scaleType="fitCenter"
            android:padding="6dp" />
    </LinearLayout>

    <!-- Remove Button -->
    <ImageButton
        android:id="@+id/removeButton"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:minWidth="48dp"
        android:minHeight="48dp"
        android:src="@drawable/delete_24"
        android:contentDescription="Remove item"
        android:layout_gravity="center_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:scaleType="fitCenter"
        android:padding="6dp"/>
</LinearLayout>